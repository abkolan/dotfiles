# ===========================
# fzf - Fuzzy Finder aliases
# dep: fd, fzf, bat
# ===========================
# Basic fzf alias with fd command to respect gitignore
alias f="fd --type f --hidden --exclude .git --exclude node_modules | /opt/homebrew/bin/fzf"

# Enhanced file search with fd + fzf + bat
alias ff="fd --type f --hidden --follow --exclude .git | /opt/homebrew/bin/fzf --preview 'bat --style=numbers --color=always --line-range :500 {}' --bind \"ctrl-/:change-preview-window(down|hidden|)\""

# fzf for files with preview window configuration
alias fzf-files="fd --type f --hidden --exclude .git --exclude node_modules | /opt/homebrew/bin/fzf --preview 'bat --color=always --line-range :500 {}' --preview-window=right:60%:wrap"

# Search in file contents with rg + fzf
alias rg="/opt/homebrew/bin/rg --color=always --line-number --no-heading --smart-case"

# Search text content interactively - function moved to .zsh_functions

# Change directory, using fd to find directories and exclude unwanted ones
alias fcd='local dir=$(fd --type d --hidden --exclude .git --exclude node_modules | /opt/homebrew/bin/fzf --preview "eza --tree --level=2 --color=always {} 2>/dev/null || ls -la {}") && [[ -n "$dir" ]] && cd "$dir"'

# Fuzzy cd with better preview
alias fzd="fd --type d --hidden --follow --exclude .git | /opt/homebrew/bin/fzf --preview 'eza --tree --level=2 --color=always {} 2>/dev/null || ls -la {}' --bind 'ctrl-/:change-preview-window(down|hidden|)'"

# Recent directories (requires zoxide)
alias zz='local dir=$(zoxide query -l | /opt/homebrew/bin/fzf --preview "eza --tree --level=2 --color=always {} 2>/dev/null || ls -la {}") && [[ -n "$dir" ]] && cd "$dir"'

