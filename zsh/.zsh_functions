# ~/.zsh_functions

# ===========================
# üì¶ EXTRACTORS
# ===========================
extract() {
    tar -xvf "$1"
}

# ===========================
# üìÇ DIRECTORY MANAGEMENT
# ===========================

# Create a directory and move into it
mkcd() {
    mkdir -p "$1" && cd "$1"
}

# Quickly go up N levels
up() {
    local c=${1:-1}
    while [ "$c" -gt 0 ]; do
        cd ..
        ((c--))
    done
}

# NOTE: This alias will be evaluated at shell load!
# Better as a function that evaluates at runtime
function z {
    local recent
    recent="$(z -l 2>/dev/null | sort -rn | head -1 | awk '{print $2}')"
    if [ -n "$recent" ]; then
        cd "$recent"
    else
        echo "No recent directory found."
    fi
}

# ===========================
# üõ† SYSTEM UTILITIES
# ===========================

# Show disk usage in a human-readable format
diskusage() {
    du -sh * 2>/dev/null | sort -hr
}

# Show top 10 largest files in the current directory
biggestfiles() {
    find . -type f -exec du -h {} + 2>/dev/null | sort -rh | head -n 10
}

# Find and kill a process by name
killproc() {
    local pids
    pids=$(pgrep -f "$1")
    if [ -n "$pids" ]; then
        echo "$pids" | xargs -r kill -9
        echo "üî™ Killed process(es): $1"
    else
        echo "‚ö†Ô∏è No process found matching: $1"
    fi
}

# Cleanup system (for macOS)
cleanmac() {
    sudo rm -rf ~/Library/Caches/*
    sudo rm -rf ~/Library/Logs/*
    sudo rm -rf /Library/Caches/*
    echo "üßπ Cleaned macOS system caches!"
}

# ===========================
# üåê NETWORK & INTERNET
# ===========================

# Quick check if a website is up
isup() {
    curl -Is "$1" | head -n 1
}

# Ping test
pingtest() {
    ping -c 5 "$1"
}

# Fastest DNS lookup
fastdns() {
    dig +short google.com
}

# ===========================
# üì¶ PACKAGE MANAGEMENT
# ===========================

# Update Homebrew and cleanup (for macOS)
brewupdate() {
    brew update && brew upgrade && brew cleanup
}

# Update Pacman packages (for Arch Linux)
pacmanupdate() {
    sudo pacman -Syu
}

# ===========================
# üê≥ DOCKER HELPERS
# ===========================

# Remove all stopped containers
docker-clean() {
    if docker info &>/dev/null; then
        docker rm "$(docker ps -aq)"
    else
        echo "üê≥ Docker daemon not running."
    fi
}

# Remove all images
docker-rmi() {
    if docker info &>/dev/null; then
        docker rmi "$(docker images -q)"
    else
        echo "üê≥ Docker daemon not running."
    fi
}

# ===========================
# ‚è≥ TIME & PRODUCTIVITY
# ===========================

# Countdown timer (example: `timer 10`)
timer() {
    sleep "$1" && echo "‚è∞ Time's up!"
}

# Show current date and time
now() {
    date "+%Y-%m-%d %H:%M:%S"
}
